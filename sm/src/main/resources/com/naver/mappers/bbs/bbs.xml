<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="Bbs">
 
 <!-- 자료실 저장 -->
 <insert id="bbs_in" parameterType="bbs">
  insert into bbs(bbs_no,bbs_name,bbs_title,bbs_pwd,bbs_cont,bbs_file,
                  bbs_ref,bbs_step,bbs_level,bbs_date)
   values(bbs_no_seq.nextval,#{bbs_name},#{bbs_title},#{bbs_pwd},#{bbs_cont},
          #{bbs_file},bbs_no_seq.nextval,0,0,sysdate) 
 </insert>
 
 <!-- 검색 전후 레코드 개수 -->
 <select id="bbs_count" parameterType="bbs" resultType="int">
  select count(bbs_no) from bbs
  <where>
     <if test="find_field==''">
     <!-- 검색 조건이 없어서 총레코드 개수 반환 -->
     </if>
     <if test="find_field=='bbs_title'">
     <!-- 검색 조건이 제목인 경우 -->
     	bbs_title like #{find_name}
     </if>
     <if test="find_field=='bbs_cont'">
     <!-- 검색 조건이 내용인 경우 -->
     	bbs_cont like #{find_name}
     </if>
  </where>
 </select>
 
 <!-- 검색 전후 목록 -->
 <select id="bbs_list" parameterType="bbs" resultType="bbs">
    select *
		from
		(select rowNum rNum, bbs_no, bbs_name,
		 bbs_title, bbs_hit,bbs_ref, 
		 bbs_step, bbs_level,bbs_date from
		(select * from bbs	
		 <where>
     		<if test="find_field==''">
     		<!-- 검색 조건이 없어서 총레코드 개수 반환 -->
     		</if>
     		<if test="find_field=='bbs_title'">
     		<!-- 검색 조건이 제목인 경우 -->
     		bbs_title like #{find_name}
     		</if>
     		<if test="find_field=='bbs_cont'">
     		<!-- 검색 조건이 내용인 경우 -->
     		bbs_cont like #{find_name}
     		</if>
     	</where>
		order by bbs_ref desc,
		 bbs_level asc))
		where rNum&gt;=#{startrow} and rNum&lt;=#{endrow}
		<!-- &gt; 은 ~보다 크다(>), &lt; 은 ~보다 작다(<) -->
 </select>
 
 <!-- 조회수 증가 -->
 <update id="bbs_hit" parameterType="int">
  update bbs
     set bbs_hit=bbs_hit+1
   where bbs_no=#{bbs_no}
 </update>
 
 <!-- 수정폼+내용보기+삭제폼+답변글폼 -->
 <select id="bbs_cont" parameterType="int" resultType="bbs">
  select * from bbs where bbs_no=#{bbs_no}
 </select>
 
 <!-- 답변글 레벨 증가 -->
 <update id="bbsLevel" parameterType="bbs">
 update bbs set bbs_level=bbs_level+1
  where bbs_ref=#{bbs_ref}
    and bbs_level>#{bbs_level}
 </update>
 
 <!-- 답변 저장 -->
 <insert id="bbs_reply" parameterType="bbs">
 insert into bbs(bbs_no,bbs_name,bbs_title,bbs_pwd,bbs_cont,bbs_ref,bbs_step,bbs_level,bbs_date)
  values(bbs_no_seq.nextval,#{bbs_name},#{bbs_title},#{bbs_pwd},#{bbs_cont},#{bbs_ref},#{bbs_step}+1,#{bbs_level}+1,sysdate)
 </insert>
 
 <!-- 자료실 수정 -->
 <update id="bbs_edit" parameterType="bbs">
 update bbs 
    set bbs_name=#{bbs_name}, bbs_title=#{bbs_title}, bbs_cont=#{bbs_cont}, bbs_file=#{bbs_file}
  where bbs_no=#{bbs_no}
 </update>
 
 <!-- 자료실 삭제 -->
 <delete id="bbs_del" parameterType="int">
  delete bbs where bbs_no=#{bbs_no} 
 </delete>
 
 </mapper>
 